{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "standard-with-typescript",
    "@vue/typescript/recommended",
    "plugin:vue/vue3-essential",
    "plugin:nuxt/recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "parser": "vue-eslint-parser",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": ["vue"],
  "rules": {
    "max-len": ["error", { "code": 120 }],
    "vue/max-len": [
      "error",
      {
        "code": 120,
        "template": 100
      }
    ]
  },
  "settings": {
    "import/resolver": {
      "nuxt": {
        "extensions": [".js", ".vue"]
      }
    }
  }
}
