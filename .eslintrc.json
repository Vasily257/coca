{
  "root": true,
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "parser": "vue-eslint-parser",
  "parserOptions": {
    "parser": "@typescript-eslint/parser",
    "ecmaVersion": 2021,
    "sourceType": "module",
    "extraFileExtensions": [
      ".vue"
    ]
  },
  "extends": [
    "@nuxtjs/eslint-config-typescript",
    "plugin:prettier/recommended"
  ],
  "rules": {
    "vue/multi-word-component-names": [
      "error",
      {
        "ignores": [
          "index",
          "blog",
          "about",
          "pricing",
          "contact"
        ]
      }
    ],
    "no-unused-vars": "off",
    "@typescript-eslint/no-unused-vars": [
      "error",
      {
        "varsIgnorePattern": "props|emits"
      }
    ],
    "vue/max-len": [
      "error",
      {
        "code": 120,
        "template": 100
      }
    ]
  }
}